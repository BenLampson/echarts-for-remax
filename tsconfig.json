{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": "./",
    "lib": ["DOM", "ES2015"],
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src"]
}
